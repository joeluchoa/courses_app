<div class="card">
  <div class="card-header">
    <h3>My Profile</h3>
  </div>
  <div class="card-body">
    <p>
      <strong>Email:</strong> <%= @user.email %>
    </p>
    <p>
      <strong>Member since:</strong> <%= @user.created_at.strftime("%B %d, %Y") %>
    </p>

    <%# Devise provides a link to its own pre-built edit page %>
    <%= link_to "Edit account", edit_user_registration_path, class: "btn btn-primary" %>
  </div>
</div>
