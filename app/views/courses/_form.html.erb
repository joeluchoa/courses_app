<%= form_with(model: course) do |form| %>
  <% if course.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
        <% course.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :code, class: "form-label" %>
    <%= form.text_field :code, class: "form-control"  %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.textarea :description, class: "form-control"  %>
  </div>

  <div class="mb-3">
    <%= form.label :start_date, class: "form-label" %>
    <%= form.date_field :start_date, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :end_date, class: "form-label" %>
    <%= form.date_field :end_date, class: "form-control"  %>
  </div>

  <div class="mb-3">
    <%= form.label :weekly_schedule, class: "form-label" %>
    <%= form.text_area :weekly_schedule, class: "form-control", rows: 5, value: JSON.pretty_generate(course.weekly_schedule || []) %>
    <p>
      <em>
        Enter the weekly schedule in JSON format. For example:
        <pre>[{"day":"Monday","start_time":"18:00","end_time":"20:00"}]</pre>
      </em>
    </p>
  </div>


  <div class="actions">
    <%= form.submit  class: "btn btn-success" %>
  </div>
<% end %>
