<div id="<%= dom_id course %>">
  <p>
    <strong><%= Course.human_attribute_name(:name) %>:</strong>
    <%= course.name %>
  </p>

  <p>
    <strong><%= Course.human_attribute_name(:description) %>:</strong>
    <%= course.description %>
  </p>

  <p>
    <strong><%= Course.human_attribute_name(:start_date) %>:</strong>
    <%= @course.start_date %>
  </p>

  <p>
    <strong><%= Course.human_attribute_name(:end_date) %>:</strong>
    <%= @course.end_date %>
  </p>

  <p>
    <strong><%= Course.human_attribute_name(:address) %>:</strong>
    <%= @course.address %>
  </p>

  <p>
    <strong><%= Course.human_attribute_name(:teacher) %>:</strong>
    <%= link_to @course.teacher.name, @course.teacher %>
  </p>

  <p>
    <strong><%= Course.human_attribute_name(:weekly_schedule) %></strong>
    <ul>
      <% @course.weekly_schedule.each do |schedule| %>
        <li>
          <%= t("weekdays.#{schedule["day"].downcase}") %>: <%= schedule["start_time"] %> - <%= schedule["end_time"] %>
        </li>
      <% end %>
    </ul>
  </p>

</div>
