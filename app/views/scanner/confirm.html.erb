<div class="row">
  <div class="col-lg-6 d-flex flex-column">
    <h4 class="mb-3">1. Verify Student</h4>
    <%= render 'students/verification_card', student: @student %>
  </div>

  <div class="col-lg-6 d-flex flex-column">
    <h4 class="mb-3">2. Verify Course</h4>
    <%= render 'courses/verification_card', course: @course %>
  </div>
</div>
<p></p>
<div class="row">
  <%= form_with url: scanner_register_attendance_path, method: :post do |form| %>
    <%# Hidden field to pass the student_id along %>
    <%= form.hidden_field :student_id, value: @student.id %>
    <%= form.hidden_field :course_id, value: @course.id %>

    <div class="d-grid">
      <%= form.submit "Confirm Attendance", class: "btn btn-success btn-lg" %>
    </div>
  <% end %>
</div>
<p></p>
