<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0">Teacher Details</h5>
    <%= link_to "Back to Teachers", teachers_path, class: "btn btn-sm btn-secondary" %>
  </div>
  <div class="card-body">
    <p><strong>Name:</strong> <%= @teacher.name %></p>
    <p><strong>Phone number:</strong> <%= @teacher.phone_number %></p>
    <p><strong>Email:</strong> <%= @teacher.email %></p>
  </div>
  <div class="card-footer d-flex gap-2">
    <%= link_to "Edit this teacher", edit_teacher_path(@teacher), class: "btn btn-warning" %>
    <%= button_to "Destroy this teacher", @teacher, method: :delete, class: "btn btn-danger", form: { data: { turbo_confirm: 'Are you sure?' } } %>
  </div>
</div>

<div class="card mt-4">
  <div class="card-header">
    Assigned Courses
  </div>
  <% if @teacher.courses.any? %>
    <ul class="list-group list-group-flush">
      <% @teacher.courses.each do |course| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= link_to course.name, course %>
          <span class="badge bg-primary rounded-pill"><%= course.students.count %> Students</span>
        </li>
      <% end %>
    </ul>
  <% else %>
    <div class="card-body">
      <p class="card-text">This teacher is not currently assigned to any courses.</p>
    </div>
  <% end %>
</div>
