<h1>User Management</h1>

<p>
  <%= link_to 'Create New User', new_admin_user_path, class: 'btn btn-primary' %>
</p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Email</th>
      <th>Role</th>
      <th>Status</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.role.titleize %></td>
        <td>
          <% if user.blocked_at? %>
            <span class="badge bg-danger">Blocked</span>
          <% else %>
            <span class="badge bg-success">Active</span>
          <% end %>
        </td>
        <td>
          <%= link_to 'Edit', edit_admin_user_path(user), class: 'btn btn-secondary btn-sm' %>
        </td>
        <td>
          <%= link_to 'Delete', admin_user_path(user), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
