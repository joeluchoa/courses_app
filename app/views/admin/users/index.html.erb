<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><%= t('users.index.title') %></h1>
  <%= link_to t('actions.new'), new_admin_user_path, class: 'btn btn-primary' %>
</div>

<table class="table table-striped table-sm table-hover table-responsive">
  <thead>
    <tr>
      <th><%= User.human_attribute_name(:name) %></th>
      <th><%= User.human_attribute_name(:email) %></th>
      <th><%= User.human_attribute_name(:role) %></th>
      <th><%= t('status.title') %></th>
      <th colspan="2"><%= t('actions.title') %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.role.titleize %></td>
        <td>
          <% if user.blocked_at? %>
            <span class="badge bg-danger"><%= t('status.blocked') %></span>
          <% else %>
            <span class="badge bg-success"><%= t('status.active') %></span>
          <% end %>
        </td>
        <td>
          <%= link_to t('actions.edit'), edit_admin_user_path(user), class: 'btn btn-secondary btn-sm' %>
          <%= link_to t('actions.delete'), admin_user_path(user), data: { turbo_method: :delete, turbo_confirm: t('devise.registrations.edit.are_you_sure') }, class: 'btn btn-danger btn-sm' %>
        </td>
        <td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
