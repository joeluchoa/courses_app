<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <%= link_to "Attendance App", root_path, class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <% if user_signed_in? %>
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <%= link_to "Dashboard", root_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Students", students_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Courses", courses_path, class: "nav-link" %>
            </li>
          </ul>
          <ul class="navbar-nav align-items-center">

            <% if user_signed_in? %>

              <li class="nav-item">
                <%= link_to profile_path, class: "nav-link nav-profile-link rounded px-3" do %>
                  <strong><%= current_user.email %></strong>
                <% end %>
              </li>

              <li class="nav-item">
                <%= button_to "Log Out", destroy_user_session_path, method: :delete, class: "btn btn-outline-danger" %>
              </li>

            <% end %>
          </ul>
        <% end %>
      </div>
    </div>
  </nav>
</header>
