<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0">Student Details</h5>
    <%= link_to "Back to students", students_path, class: "btn btn-sm btn-secondary" %>
  </div>

  <div class="card-body">
    <%= render @student %>

    <hr>

    <div class="row align-items-center">
      <div class="col-md-3">
        <%# This new div gives us a target for our CSS rule %>
        <div class="student-show-qr-code">
          <%= render 'students/qr_code', student: @student %>
        </div>
      </div>
      <div class="col-md-9">
        <h5>Attendance QR Code</h5>
        <p class="mb-2">
          This code uniquely identifies the student. Teachers can scan it using the mobile app to register attendance.
        </p>
        <%= link_to "View Printable Badge", badge_student_path(@student), class: "btn btn-outline-primary", target: "_blank" %>
      </div>
    </div>
  </div>

  <div class="card-footer d-flex gap-2">
    <%= link_to "Edit this student", edit_student_path(@student), class: "btn btn-warning" %>
    <%= button_to "Destroy this student", @student, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
  </div>
</div>
