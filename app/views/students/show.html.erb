<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0">Student Details</h5>
    <%= link_to "Back to students", students_path, class: "btn btn-sm btn-secondary" %>
  </div>

  <div class="card-body">
    <%= render @student %>
  </div>

  <div class="card-footer d-flex gap-2">
    <%= link_to "Edit this student", edit_student_path(@student), class: "btn btn-warning" %>
    <%= button_to "Destroy this student", @student, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
  </div>
</div>

<p></p>
<div class="card">
  <div class="card-header">
    <h5>Enrolled Courses (<%= @student.courses.count %>)</h5>
  </div>
  <div class="card-body">
    <% if @student.courses.any? %>
      <table class="table table-striped table-hover table-borderless table-responsive">
        <thead>
          <tr>
            <th scope="col">State</th>
            <th scope="col">Name</th>
            <th scope="col">QR Code</th>
            <th scope="col">Badge</th>
          </tr>
        </thead>
        <tbody class="align-middle">
        <% @student.courses.order(:start_date).reverse_order.each do |course| %>
          <tr>
            <td scope="row" class="text-center <%= course_row_color(course) %>"><%= course.state %></td>
            <td><%= link_to course.name, course_path(course) %></td>
            <td>
              <% if course.in_progress? %>
                <div class="student-show-qr-code">
                  <%= render 'students/qr_code', student: @student %>
                </div>
              <% else %>
                <p> Not available. </p>
              <% end %>
            </td>
            <td>
              <% unless course.finished? %>
                <%= link_to "View Badge", badge_student_path(@student), class: "btn btn-outline-primary", target: "_blank" %>
              <% else %>
                <p> Not available. </p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
      </table>
    <% else %>
      <p class="text-muted">This student is not yet enrolled in any courses.</p>
    <% end %>
  </div>
</div>

<p></p>

