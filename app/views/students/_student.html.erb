<div id="<%= dom_id student %>">

  <%# app/views/students/show.html.erb %>

  <p>
  </p>

  <% if @student.photo.attached? %>
    <%= image_tag @student.photo, width: 250, class: "img-thumbnail" %>
  <% else %>
    <strong>Photo:</strong>
    <p class="text-muted">No photo provided.</p>
  <% end %>

  <p>
    <strong>First name:</strong>
    <%= student.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= student.last_name %>
  </p>

  <p>
    <strong>Student ID:</strong>
    <%= student.student_id %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= student.email %>
  </p>

  <p>
    <strong>Date of birth:</strong>
    <%= student.date_of_birth %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= student.phone %>
  </p>

  <p>
    <strong>Tax code:</strong>
    <%= student.tax_code %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= student.address %>
  </p>

</div>
