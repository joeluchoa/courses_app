<div class="badge-container">
  <div class="badge-card">
    <div class="badge-header">
      <div class="badge-logo">Corsi Non sei solo</div>
      <div class="badge-school-name">
        Chiesa Evangelica Arca Mission√°ria
        <br/>
        Via Il Prato, 40, 50123 Firenze FI, Italy
      </div>
    </div>

    <div class="badge-body">
      <div class="qr-code-area">
        <%= render 'students/qr_code', student: @student, course: @course %>
      </div>

      <div class="student-details">
        <div class="student-name">
          <span><%= @student.first_name %></span>
          <strong><%= @student.last_name %></strong>
        </div>

        <span class="field-label">Corso</span>
        <strong class="field-value"><%= @course.name %></strong>
        <br/>
        <span class="field-label">Inizio</span>
        <strong class="field-value"><%= @course.start_date %></strong>
        <span class="field-label">Fine</span>
        <strong class="field-value"><%= @course.end_date %></strong>
        <br/>
        <span class="field-label">Tempo</span> <br/>
        <strong class="field-value">
          <% @course.weekly_schedule.each do |schedule| %>
            <%= schedule["day"] %>: <%= schedule["start_time"] %> - <%= schedule["end_time"] %> <br/>
          <% end %>
        <br/>
        <span class="field-label">Indirizzo</span>
        <strong><%= @course.address %></strong>

      </div>
    </div>

    <div class="badge-footer">
      <div class="issuing-info">
        Issued: <%= Time.now.strftime("%m/%d/%Y") %>
      </div>
    </div>
  </div>
</div>
