<div class="badge-container">
  <div class="badge-card">
    <div class="badge-header">
      <div class="badge-logo">ATTENDANCE APP</div>
      <div class="badge-school-name">Your Institution Name</div>
    </div>

    <div class="badge-body">
      <% if @student.photo.attached? %>
        <%= image_tag @student.photo, width: 120, class: "img-thumbnail" %>
      <% else %>
        <div class="student-photo-placeholder">
          <span>PHOTO</span>
        </div>
      <% end %>

      <div class="student-details">
        <div class="student-name">
          <span><%= @student.first_name %></span>
          <strong><%= @student.last_name %></strong>
        </div>
        <div class="student-id-label">STUDENT ID</div>
        <div class="student-id"><%= @student.student_id %></div>
      </div>
    </div>

    <div class="badge-footer">
      <div class="qr-code-area">
        <%# Render the QR code partial we created earlier %>
        <%= render 'students/qr_code', student: @student %>
      </div>
      <div class="issuing-info">
        Issued: <%= Time.now.strftime("%m/%d/%Y") %>
      </div>
    </div>
  </div>
</div>
