<%= form_with(model: student) do |form| %>
  <% if student.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
        <% student.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div data-controller="camera">
    <hr>
    <div class="mb-3">
      <label class="form-label">Student Photo</label>

      <%# Current photo display doesn't need any special attributes %>
      <% if student.photo.attached? %>
        <div class="mb-2">
          <%= image_tag student.photo.variant(resize_to_fill: [250, 250]), class: "img-thumbnail rounded-circle" %>
        </div>
      <% end %>

      <%# Add a data-camera-target to the file input field %>
      <%= form.file_field :photo, class: "form-control", accept: "image/png,image/jpeg,image/gif", data: { camera_target: "photoInput" } %>
      <div class="form-text">Upload a file from your device.</div>
    </div>

    <div class="mb-3">
      <label class="form-label">Or Capture with Camera</label>
      <div class="border rounded p-3 bg-light">

        <%# Add data-camera-target attributes to each element %>
        <video width="320" height="240" autoplay class="d-none rounded" data-camera-target="video"></video>
        <canvas class="d-none" data-camera-target="canvas"></canvas>

        <div class="mt-2">
          <%# Add data-action to trigger controller methods on click %>
          <button type="button" class="btn btn-secondary"
            data-action="click->camera#start"
            data-camera-target="startButton">Start Camera</button>

          <button type="button" class="btn btn-primary d-none"
            data-action="click->camera#takePhoto"
            data-camera-target="takeButton">Take Photo</button>

          <span class="text-success ms-2 d-none fw-bold" data-camera-target="successMsg">âœ“ Photo Captured!</span>
        </div>
      </div>
    </div>
    <hr>
  </div> <%# --- End of the data-controller="camera" div --- %>

